<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aprender">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:columnCount="3"
        android:padding="25dp"
        android:rowCount="4">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_gravity="fill">

            <Button
                android:id="@+id/btnAprenderAlfabeto"
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:background="@drawable/abc2"
                android:onClick="aprenderAlfabeto" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_gravity="fill">

            <Button
                android:id="@+id/btnAprenderNumeros"
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:background="@drawable/numeros"
                android:onClick="aprenderNumeros"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_gravity="fill">

            <Button
                android:id="@+id/btnAprenderAnimais"
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:background="@drawable/animais2"
                android:onClick="aprenderAnimais"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_gravity="fill">

            <Button
                android:id="@+id/btnAprenderFrutas"
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:background="@drawable/frutas2"
                android:onClick="aprenderFrutas" />
        </RelativeLayout>
    </GridLayout>

</RelativeLayout>