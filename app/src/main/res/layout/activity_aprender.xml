<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aprender">
<ScrollView
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:columnCount="3"
        android:paddingHorizontal="10dp"
        android:rowCount="4"
        app:layout_constraintHeight_percent="1.00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_marginBottom="-5dp"
            android:columnCount="1"
            android:padding="5dp"
            android:rowCount="2">

            <Button
                android:id="@+id/btnAprenderAlfabeto"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@drawable/abc2"
                android:onClick="aprenderAlfabeto" />

            <Button
                android:id="@+id/btnAprenderVogais"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/vogais"
                android:onClick="aprenderAlfabeto" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginBottom="-5dp"
            android:columnCount="1"
            android:padding="5dp"
            android:rowCount="2">

            <Button
                android:id="@+id/btnAprenderSilabas"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@drawable/abc3"
                android:onClick="aprenderNumeros" />

            <Button
                android:id="@+id/btnAprenderNumeros"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/numeros"
                android:onClick="aprenderNumeros" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginBottom="-5dp"
            android:columnCount="1"
            android:padding="5dp"
            android:rowCount="2">

            <Button
                android:id="@+id/btnAprenderSoma"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@drawable/soma"
                android:onClick="aprenderAnimais" />

            <Button
                android:id="@+id/btnAprenderSubitracao"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/subitracao"
                android:onClick="aprenderAnimais" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_marginBottom="-5dp"
            android:columnCount="1"
            android:padding="5dp"
            android:rowCount="2">

            <Button
                android:id="@+id/btnAprenderAnimais"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@drawable/animais"
                android:onClick="aprenderAnimais" />

            <Button
                android:id="@+id/btnAprenderFrutas"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/frutas"
                android:onClick="aprenderFrutas" />
        </GridLayout>
    </GridLayout></ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>